<form method="POST" class="mt-5">
    <div class="form-group">
        <label for="inputTitle">Название</label>
        <input type="text"
               value="<%= book.title %>"
               name="title"
               class="form-control"
               id="inputTitle">
    </div>

    <div class="form-group">
        <label for="inputDesc">Описание</label>
        <textarea
                rows="3"
                name="description"
                class="form-control"
                id="inputDescription"
        ><%= book.description %></textarea>
    </div>
    <div class="form-group">
        <label for="inputTitle">Автор</label>
        <input type="text"
               value="<%= book.authors %>"
               name="authors"
               class="form-control"
               id="inputAuthors">
    </div>
    <div class="form-group">
        <label for="inputTitle">favorite</label>
        <input type="text"
               value="<%= book.favorite %>"
               name="favorite"
               class="form-control"
               id="inputFavorite">
    </div>
    <div class="form-group">
        <label for="inputTitle">fileCover</label>
        <input type="text"
               value="<%= book.fileCover %>"
               name="fileCover"
               class="form-control"
               id="inputfileCover">
    </div>
    <div class="form-group">
       <input type="file" name="fileBook" accept=".pdf,.doc,.docx,.txt">
    </div>


    <div class="form-group">

    <div class="form-group text-right ">
        <button type="submit" class="btn btn-primary">Сохранить</button>
    </div>
</form>